<body onload="JavaScript:timedRefresh(5000);">
<table>
	<tr>
		<td>
			<%= link_to 'My Post', '/login/own_post' %>
		</td>
	</tr>
	<tr>
		<th>
			User Name
		</th>
		<th>
			Post
		</th>
		<th>
			Posted Time
		</th>
	</tr>
	<% for user in @posts %>
	<tr>
		<td>
			<%= user.user.user_name %>
		</td>
		<td>
			<%= user.id %>
		</td>
		<td>
			<%= user.created_at.strftime("%d/%m/%y - %I:%M%p") %>
		</td>
		<td>
			<% if user.msg_type == "Retwitt" %>
				<%= "Retwitted" %>
			<% else %>
				<%= link_to 'Retwitt', {:controller => 'login',:action => 'retwit',:user_id => user.user.id,:msg => user.message} %>
			<% end %>
			
		</td>
	</tr>
	<% end %>
</br>
</body>
</table>
<script>

function timedRefresh(timeoutPeriod) {
	setTimeout("location.reload(true);",timeoutPeriod);
}

</script>